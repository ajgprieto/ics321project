# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /page1                      controllers.Application.page1()
GET     /beverages                  controllers.Application.beverages()
GET     /snacks                     controllers.Application.snacks()
GET     /toys                       controllers.Application.toys()
GET     /cigars                     controllers.Application.cigars()
GET     /newuser                    controllers.Application.newUser()
POST    /newuser                    controllers.Application.postUsers()
GET     /cart                       controllers.Application.postCart()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
